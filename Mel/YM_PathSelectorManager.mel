global proc openPath(string $list,int $multiSwitch)
{

    string $selList[] = `textScrollList -q -si $list`;

    if($multiSwitch == 0)
    {
        if(size($selList) == 1)
        {
            system("load " + toNativePath($selList[0]));
        }
        else
        {
            warning("Select something!!!");
        }
    }
    else
    {
        if (size($selList)>0)
        {
            for($sel in $selList)
            {
                system("load " + toNativePath($sel));
            }
        }
        else
